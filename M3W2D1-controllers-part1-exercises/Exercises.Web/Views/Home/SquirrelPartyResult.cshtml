@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Squirrel Party Aftermath";
}

@model bool

@if (Model)
{
    <h1>Great Party</h1>
    <img src="~/squirrels/happy-squirrel.png" alt="cheering squirrel"/>
}
else
{
    <h1>Ugh!</h1>
    <img src="~/squirrels/sad-squirrel.png" alt="tired squirrel"/>
}

